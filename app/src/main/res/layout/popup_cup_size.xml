<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cup"
            android:id="@+id/tv_bra_size"
            android:fontFamily="@font/akzidenz_grotesk_next_regular_extd"
            android:textColor="@color/black"
            android:textSize="11sp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:textAllCaps="true"/>

        <View
            android:background="@color/grey"
            android:layout_width = "match_parent"
            android:id="@+id/view"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_below="@+id/tv_bra_size"/>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:layout_below="@+id/view">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:id="@+id/radio_gp_cup">

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/radio_A"
                android:fontFamily="@font/akzidenz_grotesk_next_regular_extd"
                android:button="@drawable/radio_button"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:text="A"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:layout_marginBottom="15dp"
                />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/radio_B"
                android:fontFamily="@font/akzidenz_grotesk_next_regular_extd"
                android:button="@drawable/radio_button"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:text="B"
                android:layout_marginBottom="15dp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"/>

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/radio_C"
                android:fontFamily="@font/akzidenz_grotesk_next_regular_extd"
                android:button="@drawable/radio_button"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:layout_marginBottom="15dp"
                android:text="C"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"/>

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/radio_D"
                android:fontFamily="@font/akzidenz_grotesk_next_regular_extd"
                android:button="@drawable/radio_button"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:layout_marginBottom="15dp"
                android:text="D"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"/>

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/radio_E"
                android:fontFamily="@font/akzidenz_grotesk_next_regular_extd"
                android:button="@drawable/radio_button"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:layout_marginBottom="15dp"
                android:text="DD"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"/>

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/radio_F"
                android:fontFamily="@font/akzidenz_grotesk_next_regular_extd"
                android:button="@drawable/radio_button"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:layout_marginBottom="15dp"
                android:text="E"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"/>

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/radio_G"
                android:fontFamily="@font/akzidenz_grotesk_next_regular_extd"
                android:button="@drawable/radio_button"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:layout_marginBottom="15dp"
                android:text="F"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"/>

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/radio_H"
                android:fontFamily="@font/akzidenz_grotesk_next_regular_extd"
                android:button="@drawable/radio_button"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:layout_marginBottom="15dp"
                android:text="G"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"/>

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/radio_I"
                android:fontFamily="@font/akzidenz_grotesk_next_regular_extd"
                android:button="@drawable/radio_button"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:layout_marginBottom="15dp"
                android:text="H"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"/>

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/radio_J"
                android:fontFamily="@font/akzidenz_grotesk_next_regular_extd"
                android:button="@drawable/radio_button"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:layout_marginBottom="15dp"
                android:text="I"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"/>

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/radio_K"
                android:fontFamily="@font/akzidenz_grotesk_next_regular_extd"
                android:button="@drawable/radio_button"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:layout_marginBottom="15dp"
                android:text="J"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"/>

        </RadioGroup>
        </ScrollView>
    </RelativeLayout>
</android.support.v7.widget.CardView>